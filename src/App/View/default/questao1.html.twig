{% extends 'layout.html.twig' %}
{% block content %}
  <div class="header-list-page">
    <h1 class="title">Fácil Tecnologia - Vaga PHP - Écio Silva</h1>
    <h3>Questão 1</h3>
  </div>
  {% if items|length %}
  <table id="products-list" class="display" style="width:100%">
    <thead>
      <tr>
        <th>Banco</th>
        <th width="15%">Verba</th>
        <th width="15%">Contrato</th>
        <th width="15%">Inclusão</th>
        <th width="15%">Valor</th>
        <th width="15%">Prazo</th>
      </tr>
    </thead>
    <tbody>
    {% for item in items %}
      <tr>
        <td >{{ item.nome }}</td>
        <td>{{ item.verba | number_format(2, ",", ".") }}</td>
        <td>{{ item.contrato_codigo }}</td>
        <td>{{ item.data_inclusao }}</td>
        <td>{{ item.valor | number_format(2, ",", ".") }}</td>
        <td>{{ item.prazo }}</td>
      </tr>
    {% endfor %}
    </tbody>
    <tfoot>
      <tr>
        <th>Banco</th>
        <th>Verba</th>
        <th>Contrato</th>
        <th>Inclusão</th>
        <th>Valor</th>
        <th>Prazo</th>
      </tr>
    </tfoot>
  </table>
  {% else %}
  <p>No product available.</p>
  {% endif %}
  <p class="text-center mt-5">
    <a href="/" class="btn-action"><i class="fa fa-arrow-left"></i> Página Inicial</a>
  </P>
  
{% endblock %}

{% block javascripts %}{% endblock %}